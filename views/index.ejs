<div class="hidden sm:block" aria-hidden="true">
  <div class="py-5">
    <div class="border-t border-gray-200"></div>
  </div>
</div>

<div class="mt-10 sm:mt-0">
  <div class="md:grid md:grid-cols-3 md:gap-6">
    <div class="md:col-span-1">
      <div class="px-4 sm:px-0">
        <h3 class="text-lg font-medium leading-6 text-gray-900">Contact Me</h3>
        <p class="mt-1 text-sm text-gray-600">
          Use the form to send me a message. I will get back with you as soon as possible.
        </p>
      </div>
    </div>
    <div class="mt-5 md:mt-0 md:col-span-2">
      <form action="/contact" method="POST">
        <div class="shadow overflow-hidden sm:rounded-md">
          <div class="px-4 py-5 sm:p-6">
            <div class="grid grid-cols-6 gap-6">
              <div class="col-span-6 sm:col-span-3">
                <label for="first_name" class="block text-sm font-medium text-gray-700">First name</label>
                <input type="text" name="first_name" placeholder="Enter your first name" id="first_name" autocomplete="given-name" class="mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md">
              </div>

              <div class="col-span-6 sm:col-span-3">
                <label for="last_name" class="block text-sm font-medium text-gray-700">Last name</label>
                <input type="text" name="last_name" placeholder="Enter your last name" id="last_name" autocomplete="family-name" class="mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md">
              </div>

              <div class="col-span-6 sm:col-span-4">
                <label for="email_address" class="block text-sm font-medium text-gray-700">Email address</label>
                <input type="email" name="email_address" placeholder="Enter your email address" id="email_address" autocomplete="email" class="mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md">
              </div>
              <div class="col-span-6 sm:col-span-3 lg:col-span-6">
                <label for="email_message" class="block text-sm font-medium text-gray-700">Message</label>
                <textarea name="email_message" placeholder="Enter a message" id="email_message" class="mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md"></textarea>
              </div>
            </div>
          </div>
          <div class="px-4 py-3 bg-gray-50 text-right sm:px-6">
            <button type="submit" class="inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
              Send
            </button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>
<% if (locals.isAuthenticated) { %>
<div class="todo-container">
  <div class="lg:text-center">
    <h1 class="text-4xl tracking-tight font-extrabold text-gray-900 sm:text-5xl md:text-6xl">
      <span class="block text-indigo-600 xl:inline">Todos</span>
    </h1>
  </div>
  <div class="todo">
  <form action="/addTodo" method="POST" class="todo-header">
  <input type="text" placeholder=" Add a task" name="content">
  <button type="submit"><span class="fas fa-plus-circle fa-2x"></span></button>
  </form>
  <ul class="todo-list">
    <% if (todoTasks) { %>
      <% todoTasks.forEach(details => { %>
      <li class="todo-list-item">
      <div class="todo-list-item-name w-full"><%= details.task %></div>
      <div class="todo-list-item-name w-full pt-1 text-xs"><%= details.createdDate %></div>
      <hr>
      <a href="/edit/<%= details._id %>" class="edit">
      <span class="fas fa-edit"></span>
      </a>
      <a href="/remove/<%= details._id %>" class="remove">
      <span class="fas fa-times"></span>
      </a>
      </li>
      <% }) %>
    <% } %>   
  </ul>
</div>
  <% } %> 
</div>

